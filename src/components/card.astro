---
import Tag from "../components/tag.astro"
const {
    title = 'TÃ­tulo',
    tags = ['?'],
    date = 'Fecha?',
    description = "Lorem ipsum dolor sit amet consectetur adipisicing elit. Blanditiis molestiae debitis quidem pariatur possimus consequuntur, soluta velit eos similique! Sapiente quas accusantium id fuga dignissimos?",
} = Astro.props;
---

<article class="card">
    <div class="tags">
        {tags.map(tag => <Tag>{tag}</Tag>)}
    </div>
    <slot name="image" />
    <h3>{title}</h3>
    <slot name="subtitle" />
    <p class="meta">{date}</p>
    <p>{description}</p>
    <slot />
</article>

<style lang="scss">
  .card {
    background-color: #1d1e26;
    padding: 1rem;
    border-radius: 10px;
    border: 1px solid var(--color-purple);
    box-shadow: 0px 0px 3px rgba(189, 147, 249, 0.5);
    transition: all 0.2s ease-in-out;
    max-width: 40ch;

    &:hover{
      box-shadow: 1px 2px 10px rgba(189, 147, 249, 0.5);
    }

    h3 {
      color: var(--color-green);
      font-family: var(--font-base);
      font-weight: bold;
      font-size: 1.5rem;
      margin-top: 0.5em;
      margin-bottom: 0;
      &::before {
        content: "";
      }
    }

    p:last-child {
      margin-bottom: 0;
    }

    .tags{
      margin: 0;
      display: flex;
      gap: 0.3em;
      flex-wrap: wrap;
    }

    .meta {
      font-size: 0.7rem;
      font-family: var(--font-header);
      color: var(--color-cyan);
      margin: 0;
    }

  }

</style>
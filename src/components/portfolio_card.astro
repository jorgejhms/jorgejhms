---
import Button from "./button.astro";
const {
  title = 'TÃ­tulo',
  date = 'Fecha?',
  description = 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Blanditiis molestiae debitis quidem pariatur possimus consequuntur, soluta velit eos similique! Sapiente quas accusantium id fuga dignissimos?',
  tags = ['?'],
  link ='#',
  img = './public/media/img_fallback.png',
  alt = 'Imagen de demo'
  } = Astro.props;
---

<article class="card">
  <div class="tags">
    {tags.map(tag => <div class="tag">{tag}</div>)}
  </div>
  <figure>
    <img src={img} alt={alt} />
  </figure>
  <h3>{title}</h3>
  <p class="meta">{date}</p>
  <p>
    {description}
  </p>
  <Button><a href={link}>Ver demo</a></Button>
</article>


<style lang="scss">
  .card {
    background-color: #1d1e26;
    padding: 1rem;
    padding-top: 0.5rem;
    border-radius: 10px;
    border: 0.5px solid var(--color-purple);
    // border-bottom: 3px solid var(--color-purple);
    box-shadow: 0px 0px 3px rgba(189, 147, 249, 0.5);
    transition: all 0.2s ease-in-out;

    &:hover{
      box-shadow: 1px 2px 10px rgba(189, 147, 249, 0.5);
    }

    .tags{
      margin: 0;
      display: flex;
      gap: 0.2em;
    }

    .tag {
      font-size: 0.7rem;
      color: #1d1e26;
      background-color: var(--color-purple);
      border-radius: 10px;
      padding: 0.1em 0.7em;
      display: inline-block;
      margin: 0;
    }

    figure {
      border-radius: 10px;
      aspect-ratio: 16 / 9;
      margin-top: 0.5rem;

      img {
        object-fit: cover; // ajusta imagen al ancho
        object-position: 0% 0%;
      }
    }

    h3 {
      color: var(--color-green);
      font-family: var(--font-base);
      font-weight: bold;
      font-size: 1.5rem;
      margin-bottom: 0;
      &::before {
        content: "";
      }
    }

    .meta {
      font-size: 0.7rem;
      color: var(--color-cyan);
      margin: 0;
    }

    a {
      color: var(--color-bg);
      text-decoration: none;
    }
  }
</style>
